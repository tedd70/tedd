@{
    ViewBag.Title = "Home Page";
}
@model Ads.Models.LoginResponseViewModel

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/advert.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css" />
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>

<div class="row">
    <form action="~/Home/Login" method="post">
        @{
            if (ViewData["hasErrors"] != null && (Boolean)ViewData["hasErrors"]==true)
            {
                <h3 style="color:red">Invalid username or password</h3>
            }
        }
        <fieldset>
            <label class="control-label" for="UserName">User name</label>
            <input class="form-control" type="text" name="UserName" id="UserName" />
        </fieldset>
        <fieldset>
            <label class="control-label" for="Password">Password</label>
            <input class="form-control" type="password" name="Password" id="Password" />
        </fieldset>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>
